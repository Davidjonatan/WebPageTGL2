<section class="bg-[#0c1b2b] text-white py-16 px-6 md:px-12 lg:px-24">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl md:text-5xl font-extrabold text-center mb-8" style="font-family: 'Merriweather Sans', sans-serif;">
      Contáctanos
    </h2>

    <form class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Nombre -->
      <div class="flex flex-col">
        <label for="nombre" class="text-lg font-semibold mb-2">Nombre</label>
        <input
          id="nombre"
          name="nombre"
          type="text"
          placeholder="Tu nombre completo"
          class="p-3 rounded-lg bg-slate-800 text-white focus:outline-none focus:ring-2 focus:ring-blue-400"
        />
      </div>

      <!-- Correo -->
      <div class="flex flex-col">
        <label for="correo" class="text-lg font-semibold mb-2">Correo</label>
        <input
          id="correo"
          name="correo"
          type="email"
          placeholder="correo@ejemplo.com"
          class="p-3 rounded-lg bg-slate-800 text-white focus:outline-none focus:ring-2 focus:ring-blue-400"
        />
      </div>

      <!-- Asunto -->
      <div class="flex flex-col md:col-span-2">
        <label for="asunto" class="text-lg font-semibold mb-2">Asunto</label>
        <input
          id="asunto"
          name="asunto"
          type="text"
          placeholder="Motivo del mensaje"
          class="p-3 rounded-lg bg-slate-800 text-white focus:outline-none focus:ring-2 focus:ring-blue-400"
        />
      </div>

      <!-- Teléfono -->
      <div class="flex flex-col">
        <label for="telefono" class="text-lg font-semibold mb-2">Teléfono</label>
        <input
          id="telefono"
          name="telefono"
          type="tel"
          placeholder="+52 000 000 0000"
          class="p-3 rounded-lg bg-slate-800 text-white focus:outline-none focus:ring-2 focus:ring-blue-400"
        />
      </div>

      <!-- Mensaje -->
      <div class="flex flex-col md:col-span-2">
        <label for="mensaje" class="text-lg font-semibold mb-2">Mensaje</label>
        <textarea
          id="mensaje"
          name="mensaje"
          rows="5"
          placeholder="Escribe tu mensaje aquí..."
          class="p-3 rounded-lg bg-slate-800 text-white focus:outline-none focus:ring-2 focus:ring-blue-400 resize-none"
        ></textarea>
      </div>

      <!-- Botón -->
      <div class="md:col-span-2 text-center mt-4">
        <button
          type="submit"
          class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-8 rounded-lg transition-all duration-300"
        >
          Enviar mensaje
        </button>
      </div>
    </form>
  </div>
</section>  