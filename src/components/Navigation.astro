<header class="sticky top-0 z-50 py-6 backdrop-blur-md border-b border-white/20">
  <div class="max-w-7xl mx-auto px-6 xl:px-0" x-data="{ mobileMenuOpen: false }">
    
    <div class="backdrop-blur-md bg-white/95 border border-white/30 flex items-center justify-between gap-x-6 rounded-2xl py-4 pl-6 pr-6 shadow-[0_2px_15px_0px_rgba(0,0,0,0.2)] lg:grid lg:grid-cols-[1fr_auto_1fr] lg:justify-stretch lg:gap-x-14 lg:rounded-[1.5rem]">
      
      <!-- Logo -->
      <div class="flex items-center gap-x-12">
        <a href="/" title="Home">
          <img class="h-12" src="/images/logosinfondo.png" alt="Logo" />
        </a>
        <span class="hidden h-6 w-[1px] bg-neutral-300 lg:block"></span>
      </div>

      <!-- Navegación -->
      <nav class="hidden lg:block">
        <ul class="flex items-center gap-x-8">
          <li>
            <a class="px-4 py-3 text-base font-semibold text-neutral-700 transition hover:text-neutral-600" href="#">Inicio</a>
          </li>
          <li>
            <a class="px-4 py-3 text-base font-semibold text-neutral-700 transition hover:text-neutral-600" href="#">Nosotros</a>
          </li>
          <li>
            <a class="px-4 py-3 text-base font-semibold text-neutral-700 transition hover:text-neutral-600" href="#">Servicios</a>
          </li>
          <li>
            <a class="flex items-center gap-x-2 px-4 py-3 text-base font-semibold text-neutral-700 transition hover:text-neutral-600" href="#">
              Contactanos
              <svg class="h-5 text-neutral-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M8.25 3.75H19.5a.75.75 0 0 1 .75.75v11.25a.75.75 0 0 1-1.5 0V6.31L5.03 20.03a.75.75 0 0 1-1.06-1.06L17.69 5.25H8.25a.75.75 0 0 1 0-1.5Z" clip-rule="evenodd" />
              </svg>
            </a>
          </li>
        </ul>
      </nav>

      <!-- Botones / Iconos -->
      <div class="flex items-center gap-x-8 justify-self-end">
        <span class="hidden h-6 w-[1px] bg-neutral-300 lg:block"></span>

        <!-- Imagen redonda para Log in -->
        <a href="/login.astro" title="Log in">
          <img src="/images/bandera_us.png" alt="Log in" class="w-12 h-12 rounded-full object-cover hover:scale-105 transition-transform" />
        </a>

        <!-- Imagen redonda para Try free -->
        <a href="/tryfree.astro" title="Try free">
          <img src="/images/mexico.png" alt="Try Free" class="w-12 h-12 rounded-full object-cover hover:scale-105 transition-transform" />
        </a>

        <!-- Menú móvil -->
        <button type="button" aria-label="Open menu" class="lg:hidden" title="Open menu" @click="mobileMenuOpen = !mobileMenuOpen">
          <svg class="h-8 text-slate-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M3 9a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 9Zm0 6.75a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75a.75.75 0 0 1-.75-.75Z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div x-show="mobileMenuOpen"
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 scale-95"
         x-transition:enter-end="opacity-100 scale-100"
         x-transition:leave="transition ease-in duration-150"
         x-transition:leave-start="opacity-100 scale-100"
         x-transition:leave-end="opacity-0 scale-95"
         class="lg:hidden mt-4 max-w-7xl mx-auto px-6">
      <div class="backdrop-blur-md bg-white/95 border border-white/30 rounded-2xl py-4 px-4 shadow-[0_2px_10px_0px_rgba(0,0,0,0.15)]">
        <nav class="space-y-4">
          <a href="#" class="block px-4 py-3 text-base font-semibold text-neutral-700 hover:text-neutral-600 transition-colors">Inicio</a>
          <a href="#" class="block px-4 py-3 text-base font-semibold text-neutral-700 hover:text-neutral-600 transition-colors">Nosotros</a>
          <a href="#" class="block px-4 py-3 text-base font-semibold text-neutral-700 hover:text-neutral-600 transition-colors">Servicios</a>
          <a href="#" class="block px-4 py-3 text-base font-semibold text-neutral-700 hover:text-neutral-600 transition-colors">Contactanos</a>
        </nav>
      </div>
    </div>

  </div>
</header>
