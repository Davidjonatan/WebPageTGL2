---
// HeroSection.astro
import AnimateOnScroll from "./animations/AnimateOnScroll.tsx"; // para la imagen
import AnimateFromLeft from "./animations/AnimateFromLeft.tsx"; // para el texto

const {
  backgroundColor = "", // fondo de la section
  title = "",
  text = "",
  buttonText = "",
  buttonSubtext = "",
  image = "",
} = Astro.props;
---

<section class={`relative ${backgroundColor} py-16`}>
  <div class="max-w-7xl mx-auto px-4 xl:px-0">
    <div
      class="relative overflow-hidden rounded-3xl bg-gradient-to-r from-[#1E2A47] via-slate-800 to-slate-900 lg:grid lg:grid-cols-2"
    >
      <!-- Texto -->
      <AnimateFromLeft client:load>
        <div class="flex flex-col justify-center px-6 py-12 lg:px-16 lg:py-24">
          
          <!-- Div del título amarillo -->
          <div class="bg-yellow-500 p-3 lg:p-4 rounded-xl shadow-lg inline-block max-w-xl">
            <h2
              class="text-2xl lg:text-4xl font-semibold text-white leading-tight"
            >
              {title}
            </h2>
          </div>
          <!-- Texto secundario -->
          <div class="mt-4 max-w-2xl">
            <h6
              class="text-lg lg:text-2xl font-semibold text-gray-100 leading-snug"
            >
              {text}
            </h6>
          </div>
          <!-- Botón rojo -->
          <a
            href="#"
            class="mt-6 flex items-center justify-center whitespace-nowrap text-sm font-medium transition-all px-5 py-3 rounded-xl shadow-lg bg-red-600 text-white hover:bg-red-700"
          >
            {buttonText}
            <svg
              class="shrink-0 ml-2 h-4 text-white"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M12.97 3.97a.75.75 0 0 1 1.06 0l7.5 7.5a.75.75 0 0 1 0 1.06l-7.5 7.5a.75.75 0 1 1-1.06-1.06l6.22-6.22H3a.75.75 0 0 1 0-1.5h16.19l-6.22-6.22a.75.75 0 0 1 0-1.06Z"
                clip-rule="evenodd"
              />
            </svg>
          </a>
        </div>
      </AnimateFromLeft>

      <!-- Imagen -->
      <figure class="flex items-center justify-center py-12 lg:py-0">
        <AnimateOnScroll client:load>
          <img
            class="h-96 lg:h-[36rem] object-contain"
            src={image}
            alt="Mockup"
          />
        </AnimateOnScroll>
      </figure>
    </div>
  </div>
</section>
