---
interface Props {
  bgImage?: string;
  image: string;
  imagePosition?: "left" | "right";
  title?: string;
  text?: string;
  textSize?: string;
  titlesize?: string;
  textColor?: string;
  titleColor?: string;
}

const {
  bgImage = "/images/Card.svg",
  image,
  imagePosition = "right",
  title = "",
  titlesize = "text-3xl md:text-4xl font-bold", // tamaño visible del título
  text = "",
  textSize = "text-base md:text-lg leading-relaxed", // texto legible
  textColor = "text-black",
  titleColor = "text-gray-900",
} = Astro.props;
---

<section
  class="relative w-full flex flex-col md:flex-row items-stretch min-h-[400px]"
  style={`background-image: url(${bgImage}); background-size: cover; background-position: center;`}
>
  <!-- Contenedor de texto -->
  <div
    class="flex flex-col justify-center items-start z-10 w-full md:w-1/2 text-left p-8 md:p-12 space-y-4 order-1 md:order-none"
  >
    {title && <h2 class={`${titlesize} ${titleColor}`}>{title}</h2>}
    {text && <p class={`${textSize} ${textColor} max-w-xl`}>{text}</p>}
  </div>

  <!-- Contenedor de imagen -->
  <div
    class={`w-full md:w-1/2 flex justify-center px-4 pb-4 md:px-0 md:pb-0 mt-auto md:mt-0 order-2 
      ${imagePosition === "right" ? "md:order-last" : "md:order-first"}`}
  >
    <img
      src={image}
      alt="Imagen lateral"
      class="w-full max-w-md object-cover md:w-full md:h-full md:max-w-none"
    />
  </div>
</section>
