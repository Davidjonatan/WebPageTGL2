---
interface Props {
  bgSvg?: string;     
  image?: string;     
  title?: string;     
  textColor?: string; 
  imagePosition?: "left" | "right"; 
  textSize?: string; 
}

const {
  bgSvg = "/images/Card.svg",
  image = "/images/default.jpg",
  title = "Texto de ejemplo",
  textColor = "text-black",
  imagePosition = "right",
  textSize = "text-3xl md:text-4xl lg:text-5xl",
} = Astro.props;
---

<section 
  class="relative w-full flex items-center justify-center px-6 md:px-12 lg:px-20 py-16"
  style={`background-image: url(${bgSvg}); background-size: cover; background-position: center;`}
>
  <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
    
    <!-- Texto -->
    <div class={`flex flex-col justify-center text-center md:text-left ${imagePosition === "right" ? "order-1 md:order-1" : "order-1 md:order-2"}`}>
      <h2 class={`${textSize} font-bold leading-tight ${textColor}`}>
        {title}
      </h2>
    </div>

    <!-- Imagen -->
    <div class={`flex justify-center md:justify-${imagePosition} order-2 ${imagePosition === "right" ? "md:order-2" : "md:order-1"}`}>
      <img 
        src={image} 
        alt="Imagen decorativa"
        class="w-full max-w-md md:max-w-lg rounded-xl shadow-2xl object-cover"
      />
    </div>
  </div>
</section>
