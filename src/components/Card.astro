---
interface Props {
  bgSvg?: string;     
  image?: string;     
  title?: string;     
  textColor?: string; 
  imagePosition?: "left" | "right"; 
  textSize?: string; 
}

const {
  bgSvg = "/images/Card.svg",
  image = "/images/default.jpg",
  title = "Texto de ejemplo",
  textColor = "text-black",
  imagePosition = "right",
  textSize = "text-3xl md:text-4xl lg:text-5xl",
} = Astro.props;
---

<section 
  class="relative w-full flex items-center justify-center px-4 md:px-8 lg:px-12 py-12"
  style={`background-image: url(${bgSvg}); background-size: cover; background-position: center;`}
>
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 items-center gap-y-8 md:gap-x-16">
    
    <!-- Texto -->
    <div class="flex flex-col justify-center text-right z-10 order-1 md:order-1">
      <h2 class={`${textSize} font-bold leading-tight ${textColor}`}>
        {title}
      </h2>
    </div>

    <!-- Imagen -->
    <div class="flex justify-center md:justify-start order-2 md:order-2 md:ml-4">
      <img 
        src={image} 
        alt="Imagen decorativa"
        class="rounded-xl shadow-lg object-cover w-[580px] h-[340px]"
      />
    </div>
  </div>
</section>
