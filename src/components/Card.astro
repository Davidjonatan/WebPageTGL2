---
interface Props {
  bgSvg?: string;     
  image?: string;     
  title?: string;     
  textColor?: string; 
  imagePosition?: "left" | "right"; 
  textSize?: string; 
}

const {
  bgSvg = "/images/Card.svg",
  image = "/images/default.jpg",
  title = "Texto de ejemplo",
  textColor = "text-black",
  imagePosition = "right",
  textSize = "text-3xl md:text-4xl lg:text-5xl",
} = Astro.props;
---

<section 
  class="relative w-full flex items-center justify-center px-4 md:px-8 lg:px-12 py-12"
  style={`background-image: url(${bgSvg}); background-size: cover; background-position: center;`}
>
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6 items-center">
    
    <!-- Texto - Siempre a la izquierda -->
    <div class="flex flex-col justify-center text-center md:text-left order-1 md:order-1">
      <h2 class={`${textSize} font-bold leading-tight ${textColor}`}>
        {title}
      </h2>
    </div>

    <!-- Imagen - Siempre a la derecha y mÃ¡s cerca del texto -->
    <div class="flex justify-center md:justify-start order-2 md:order-2">
      <img 
        src={image} 
        alt="Imagen decorativa"
        class="w-full max-w-sm md:max-w-md rounded-xl shadow-lg object-cover"
      />
    </div>
  </div>
</section>