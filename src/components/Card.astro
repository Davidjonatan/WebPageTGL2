---
const {
  backgroundSvg = '/images/Card.svg', // Fondo SVG
  imageSrc = '/images/default.png',    // Imagen de la card
  title = 'Título aquí',               // Texto principal
  description = 'Descripción aquí',    // Texto secundario
  imagePosition = 'left',              // 'left' o 'right'
  textColor = 'text-white',            // Color del texto
  height = 'h-64',                     // Altura de la card
  width = 'w-full',                    // Ancho de la card
} = Astro.props;
---

<section
  class={`relative ${width} ${height} flex items-center overflow-hidden rounded-xl shadow-lg`}
  style={`background-image: url('${backgroundSvg}'); background-size: cover; background-position: center;`}
>
  <!-- Imagen -->
  <div class={`flex-1 ${imagePosition === 'left' ? 'order-1' : 'order-2'} flex justify-center items-center px-4`}>
    <img src={imageSrc} alt={title} class="max-h-full max-w-full object-contain rounded-lg" />
  </div>

  <!-- Texto -->
  <div class={`flex-1 ${imagePosition === 'left' ? 'order-2' : 'order-1'} px-6 py-4`}>
    <h2 class={`text-2xl md:text-3xl font-bold ${textColor} mb-2`}>{title}</h2>
    <p class={`text-base md:text-lg ${textColor}/90`}>{description}</p>
  </div>
</section>
