---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.tsx';
import LogoCloud from '../components/LogoCloud.astro';
import Card2 from '../components/Card2.astro';
import Stats from '../components/Stats.astro';
import Testimonials from '../components/Testimonials.tsx';
import Cobertura from '../components/Cobertura.astro';
import Pricing from '../components/Pricing.astro';

const items = [
  { text: 'Responsables con el medio ambiente.' },
  { text: 'Unidades limpias y sanitizadas.' },
  { text: 'Implementacion de Web Service con nuestros clientes.' },
  { text: 'Personal de logistica y atencion a clientes 24/7.' },
  { text: 'Certificaciones ISO 9001:2015 C-TPAT, HACCP.' },
]
---

<BaseLayout>
	<Hero
  client:load
  backgroundType="video"
  backgroundSrc="/public_html/images/index/video.mp4"
  enableCarousel={true}
/>
	<LogoCloud 
  backgroundImage = '/public_html/images/svgs/wave.svg',
  title = 'DEJANOS MOVERTE CON HONESTIDAD Y GRANDEZA',
  titleStyle='logo-indexarriba'
  origin = "topRight",/>
  <Pricing />	 
  <Testimonials
  client:load
  testimonials={[
    { quote: "Todas nuestras unidades cuentan con sistema de rastreo satelital el cual es monitoreado las 24 hrs para asegurar que el viaje llegue a su destino sin ningún contratiempo"},
    { quote: "Equipos de telecomunicaciones con cobertura en todo el territorio nacional y extranjero"},
    { quote: "Al ser grado alimenticio todas nuestras unidades pasan por un proceso de lavado y sanitizado antes de salir a cada viaje asegurando la calidad a nuestros clientes"}
  ]}/>
  <Cobertura 
  backgroundColor = "bg-[#121833]", // fondo de la section
  cardColor = "bg-gradient-to-r from-[#1E2A47] via-slate-800 to-slate-900",      // fondo del div principal
  title = "COBERTURA",
  text= "Prestamos nuestros servicios a todo lo largo y ancho del territorio nacional, así como productos de exportación hacia los Estados Unidos, contamos con diferentes tipos de licencia para el cruce de mercancía y unidades en los estados unidos.",
  buttonText = "CONTACTANOS",
  buttonColor = "bg-amber-500 text-white hover:bg-amber-600",
  image = "/public_html/images/index/mapa.jpg",
  />  
	
	<Stats 
  title="Nuestra Infraestructura"
  description='Más de 32 años de experiencia brindando transporte confiable, con unidades modernas, personal altamente capacitado, rastreo satelital, procesos sanitizados y certificaciones internacionales que garantizan calidad y seguridad.'
  stats={[
    { number: 32, label: "Años de expereincia" },
    { number: 400, label: "Tractocamiones" },
    { number: 550, label: "Remolques" },
    { number: 600, label: "Personal dedicado" },]}/>
    <Card2
  bgImage="/public_html/images/index/lista.png"
  items = {items}
  image= "/public_html/images/index/tracto3.png",
  imagePosition = "left",
  listStyle='list-1',
  animateImage = {false},
  animateList = {true},
  imageOrigin='Left'
   />
 <LogoCloud 
   backgroundImage = '/public_html/images/index/logoindexabajo.png',
  title = 'Transportes Garza Leal es fundada el 23 de Noviembre 1989,incursion en el negocio del Autotransporte Federal con base en la ciudad de Lerdo, Durango que forma parte de la Comarca Lagunera.',
  titleStyle='logo-indexabajo'
  origin = "topRight",/>
</BaseLayout>
