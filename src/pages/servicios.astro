---
import BaseLayout from '../layouts/BaseLayout.astro';
import LogoCloud from '../components/LogoCloud.astro';
import HowItWorks from '../components/HowItWorks';
import Card4 from '../components/Card4.astro';


const features = [
  { text: '32 años de experiencia.' },
  { text: 'Unidades de modelo reciente.' },
  { text: 'Responsables con el medio ambiente.' },
  { text: 'Unidades con rastreo satelital.' },
  { text: 'Unidades limpias y sanitizadas.' },
  { text: 'Implementacion de Web Service con nuestros clientes.' },
  { text: 'Personal de logistica y atencion a clientes 24/7.' },
  { text: 'Certificaciones ISO 9001:2015 C-TPAT, HACCP.' },
]
const tabs = {
  tab1: {
    text: "TANQUES",
    subtitle: "Explora nuestra flota de tanques.",
    images: [
      { src: "/ejemplo/images/servicios/gallery/tanque.jpg", alt: "Tanque 1" },
      { src: "/ejemplo/images/servicios/gallery/tanque2.jpeg", alt: "Tanque 2" },
      { src: "/ejemplo/images/servicios/gallery/tanque3.jpeg", alt: "Tanque 3" },
      { src: "/ejemplo/images/servicios/gallery/tanque4.jpeg", alt: "Tanque 4" },
      { src: "/ejemplo/images/servicios/gallery/tanque5.jpeg", alt: "Tanque 5" },
      { src: "/ejemplo/images/servicios/gallery/tanque6.jpeg", alt: "Tanque 6" },
      { src: "/ejemplo/images/servicios/gallery/tanque7.jpeg", alt: "Tanque 7" },
      { src: "/ejemplo/images/servicios/gallery/tanque8.jpeg", alt: "Tanque 8" },
      { src: "/ejemplo/images/servicios/gallery/tanque9.jpg", alt: "Tanque 9" },
      { src: "/ejemplo/images/servicios/gallery/tanque10.jpg", alt: "Tanque 10" },
      { src: "/ejemplo/images/servicios/gallery/tanque11.jpeg", alt: "Tanque 11" },
      { src: "/ejemplo/images/servicios/gallery/tanque12.jpeg", alt: "Tanque 12" },
    ],
  },
  tab2: {
    text: "CAJAS SECAS",
    subtitle: "Nuestras cajas secas modernas.",
    images: [
      { src: "/ejemplo/images/servicios/gallery/seca.jpg", alt: "Caja Seca 1" },
      { src: "/ejemplo/images/servicios/gallery/seca2.jpg", alt: "Caja Seca 2" },
      { src: "/ejemplo/images/servicios/gallery/seca3.jpg", alt: "Caja Seca 3" },
