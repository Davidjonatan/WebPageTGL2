      { src: "/ejemplo/images/servicios/gallery/seca5.jpg", alt: "Caja Seca 5" },
      { src: "/ejemplo/images/servicios/gallery/seca6.jpg", alt: "Caja Seca 6" },
      { src: "/ejemplo/images/servicios/gallery/seca7.jpg", alt: "Caja Seca 7" },
      { src: "/ejemplo/images/servicios/gallery/seca8.jpg", alt: "Caja Seca 8" },
      { src: "/ejemplo/images/servicios/gallery/seca9.jpg", alt: "Caja Seca 9" },
