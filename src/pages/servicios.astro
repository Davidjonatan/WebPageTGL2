  tab3: {
    text: "CAJAS THERMO",
    subtitle: "Soluciones de carga refrigerada.",
    images: [
      { src: "/ejemplo/images/servicios/gallery/thermo.jpeg", alt: "Thermo 1" },
      { src: "/ejemplo/images/servicios/gallery/thermo2.jpeg", alt: "Thermo 2" },
