---
import BaseLayout from '../layouts/BaseLayout.astro';
import LogoCloud from '../components/LogoCloud.astro';
import Testimonials from '../components/Testimonials.tsx';
import HowItWorks from '../components/HowItWorks';
import Card3 from '../components/Card3.astro';


const features = [
  { text: '32 años de experiencia.' },
  { text: 'Unidades de modelo reciente.' },
  { text: 'Responsables con el medio ambiente.' },
  { text: 'Unidades con rastreo satelital.' },
  { text: 'Unidades limpias y sanitizadas.' },
  { text: 'Implementacion de Web Service con nuestros clientes.' },
  { text: 'Personal de logistica y atencion a clientes 24/7.' },
  { text: 'Certificaciones ISO 9001:2015 C-TPAT, HACCP.' },
]
const tabs = {
  tab1: {
    text: "Tanques",
    subtitle: "Explora nuestra flota de tanques.",
    images: [
      { src: "./images/tanque2.jpg", alt: "Tanque 1" },
      { src: "./images/tanque2.jpg", alt: "Tanque 2" },
      { src: "./images/tanque2.jpg", alt: "Tanque 3" },
    ],
  },
  tab2: {
    text: "Cajas Secas",
    subtitle: "Nuestras cajas secas modernas.",
    images: [
      { src: "./images/seca.jpg", alt: "Caja Seca 1" },
      { src: "./images/seca.jpg", alt: "Caja Seca 2" },
    ],
  },
  tab3: {
    text: "Thermo",
    subtitle: "Soluciones de carga refrigerada.",
    images: [
      { src: "./images/thermo.jpg", alt: "Thermo 1" },
      { src: "./images/thermo.jpg", alt: "Thermo 2" },
      { src: "./images/thermo.jpg", alt: "Thermo 3" },
    ],
  },
};
