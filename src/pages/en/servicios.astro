---
import BaseLayout from '../../layouts/BaseLayout.astro';
import LogoCloud from '../../components/LogoCloud.astro';
import HowItWorks from '../../components/HowItWorks';
import Card4 from '../../components/Card4.astro';
import Hero from '../../components/Hero';

const features = [
  { text: '32 years of experience.' },
  { text: 'Recent model units.' },
  { text: 'Environmentally responsible.' },
  { text: 'Units with satellite tracking.' },
  { text: 'Clean and sanitized units.' },
  { text: 'Web Service implementation with our clients.' },
  { text: 'Logistics personnel and 24/7 customer service.' },
  { text: 'ISO 9001:2015 C-TPAT, HACCP certifications.' },
]

const tabs = {
  tab1: {
    text: "STAINLESS STEEL TANKER",
    subtitle: "Explore our services.",
    images: [
      { src: "/public_html/images/servicios/gallery/tanque.jpg", alt: "Tank 1" },
      { src: "/public_html/images/servicios/gallery/tanque2.jpeg", alt: "Tank 2" },
      { src: "/public_html/images/servicios/gallery/tanque3.jpeg", alt: "Tank 3" },
      { src: "/public_html/images/servicios/gallery/tanque4.jpeg", alt: "Tank 4" },
      { src: "/public_html/images/servicios/gallery/tanque5.jpeg", alt: "Tank 5" },
      { src: "/public_html/images/servicios/gallery/tanque6.jpeg", alt: "Tank 6" },
      { src: "/public_html/images/servicios/gallery/tanque7.jpeg", alt: "Tank 7" },
      { src: "/public_html/images/servicios/gallery/tanque8.jpeg", alt: "Tank 8" },
      { src: "/public_html/images/servicios/gallery/tanque9.jpg", alt: "Tank 9" },
      { src: "/public_html/images/servicios/gallery/tanque10.jpg", alt: "Tank 10" },
      { src: "/public_html/images/servicios/gallery/tanque11.jpeg", alt: "Tank 11" },
      { src: "/public_html/images/servicios/gallery/tanque12.jpeg", alt: "Tank 12" },
    ],
  },
  tab2: {
    text: "DRY VANS",
    subtitle: "Our modern dry boxes.",
    images: [
      { src: "/public_html/images/servicios/gallery/seca.jpg", alt: "Dry Box 1" },
      { src: "/public_html/images/servicios/gallery/seca2.jpg", alt: "Dry Box 2" },
      { src: "/public_html/images/servicios/gallery/seca3.jpg", alt: "Dry Box 3" },
      { src: "/public_html/images/servicios/gallery/seca4.jpg", alt: "Dry Box 4" },
      { src: "/public_html/images/servicios/gallery/seca5.jpg", alt: "Dry Box 5" },
      { src: "/public_html/images/servicios/gallery/seca6.jpg", alt: "Dry Box 6" },
      { src: "/public_html/images/servicios/gallery/seca7.jpg", alt: "Dry Box 7" },
      { src: "/public_html/images/servicios/gallery/seca8.jpg", alt: "Dry Box 8" },
      { src: "/public_html/images/servicios/gallery/seca9.jpg", alt: "Dry Box 9" },
    ],
  },
  tab3: {
    text: "REEFER UNITS",
    subtitle: "Refrigerated solutions.",
    images: [
      { src: "/public_html/images/servicios/gallery/thermo.jpeg", alt: "Thermo 1" },
      { src: "/public_html/images/servicios/gallery/thermo2.jpeg", alt: "Thermo 2" },
      { src: "/public_html/images/servicios/gallery/thermo3.jpeg", alt: "Thermo 3" },
      { src: "/public_html/images/servicios/gallery/thermo4.jpeg", alt: "Thermo 4" },
      { src: "/public_html/images/servicios/gallery/thermo5.jpeg", alt: "Thermo 5" },
      { src: "/public_html/images/servicios/gallery/thermo6.jpeg", alt: "Thermo 6" },
      { src: "/public_html/images/servicios/gallery/thermo7.jpeg", alt: "Thermo 7" },
      { src: "/public_html/images/servicios/gallery/thermo8.jpeg", alt: "Thermo 8" },
      { src: "/public_html/images/servicios/gallery/thermo9.jpeg", alt: "Thermo 9" },
    ],
  },
