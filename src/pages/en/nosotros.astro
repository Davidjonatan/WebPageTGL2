---
import BaseLayout from '../../layouts/BaseLayout.astro';
import LogoCloud from '../../components/LogoCloud.astro';
import Card3 from '../../components/Card3.astro';
import Card from '../../components/Card.astro'
import Card2 from '../../components/Card2.astro'
import ImageCarousel from '../../components/Carrouselimages';
import Hero from '../../components/Hero';
import Cobertura from '../../components/Cobertura.astro';

const features = [
  { text: '36 years of experience.' },
  { text: 'Recent model units.' },
  { text: 'Environmentally responsible.' },
  { text: 'Units with satellite tracking.' },
  { text: 'Clean and sanitized units.' },
  { text: 'Web Service implementation with our clients.' },
  { text: 'Logistics personnel and 24/7 customer service.' },
  { text: 'ISO 9001:2015 C-TPAT, HACCP certifications.' },
]

const items = [
  { text: 'Honesty: Acting with propriety and adherence to company norms.' },
  { text: 'Responsibility: Fulfilling commitments and duties both at work and in family, assuming the consequences of actions.' },
  { text: 'Respect: Recognizing the dignity and rights of oneself and others.' },
  { text: 'Service: Providing timely attention with efficiency and kindness to internal and external clients.' },
  { text: 'Justice: Giving each person what corresponds to them.' },
];
---

<BaseLayout>
    <Hero
  backgroundType="image"
  backgroundSrc="/public_html/images/nosotros/nosotros.jpeg"
  enableCarousel={false}
  slides={[
    { title: "LET'S GO WITH YOU" }
  ]}
  />
    <Card 
  bgSvg="/public_html/images/nosotros/fondoserch.png"
  image="/public_html/images/nosotros/eteserch.png"
  text="AT TRANSPORTES GARZA LEAL OUR MAIN MISSION IS TO OFFER THE BEST SERVICE TO OUR CLIENTS IN THE TRANSPORTATION OF THEIR PRODUCTS, COMPLYING WITH LEGAL, REGULATORY AND CLIENT STANDARDS, COMMITTED TO THE CONTINUOUS IMPROVEMENT OF OUR QUALITY MANAGEMENT SYSTEM."
  textStyle='text-1'
  imageOrigin="Right"
  textOrigin="Left"
/>
	<LogoCloud 
    backgroundImage="/public_html/images/svgs/logo1.svg"
  title="QUALITY POLICY"
  titleStyle="logo-nosotros"
  origin="bottom"/>
  <Cobertura 
  backgroundColor = "bg-[#121833]"
  cardColor = "bg-gradient-to-r from-[#1E2A47] via-slate-800 to-slate-900"
  title = "WASHING"
  text= " At Transportes Garza Leal, we have a food safety-certified car wash center specializing in the cleaning and sanitization of food-grade transport units. Our process guarantees waste elimination, complete disinfection, and cross-contamination control, complying with ISO 9001:2015 and HACCP guidelines. Each unit is inspected and documented through car wash logs and car wash certificates, ensuring it leaves the road in optimal hygiene and safety conditions."
  buttonText = "OUR SERVICES"
  buttonColor = "bg-[#1E2A47]"
  video = "/public_html/images/nosotros/Lavado.mp4"
  baseurl = " /public_html/en/servicios"
  mediaType = "video"
  layout = "text-right"
  />  
  <Card3 
    bgImage="/public_html/images/nosotros/degradadoright.png"
    image="/public_html/images/nosotros/mision.png"
    imagePosition="left"
    title="MISSION"
    text="To provide our clients with excellent, reliable, and punctual service, with clean and well-presented units."
    titleStyle="title1-card3-nosotros"
    textStyle="text1-card3-nosotros"
    textAlign="left"
    textOrigin="top"
    imageOrigin="bottom"
    titleOrigin="bottomRight"
  />
  
  <Card3 
    bgImage="/public_html/images/nosotros/degradadoleft.png"
    image="/public_html/images/nosotros/vision.png"
    imagePosition="right"
    title="VISION"
    text="To be one of the leading companies in federal cargo transportation in our country, reflecting reliability in our clients and perfectly presented teams."
    titleStyle="title1-card3-nosotros"
    textStyle="text1-card3-nosotros"
    textAlign="left"
    textOrigin="Right"
    imageOrigin="bottomLeft"
    titleOrigin="topRight"
  />
  
  <Card2
  bgImage="/public_html/images/nosotros/degradadoright.png"
  items={items}
  image="/public_html/images/nosotros/valores.png"
  imagePosition="left"
  listStyle='list-2'
  titleStyle='titlelist-1'
  title='PRINCIPLES'
  animateImage={false}
  animateList={true}
  imageOrigin="Left"/>
  
  <ImageCarousel
      client:load
      title="HISTORY"
      description="Transportes Garza Leal is a 100% Mexican company, founded 36 years ago, with the vision and drive of the Garza Leal brothers, who decided to enter the transportation business in 1989, to meet the food transportation needs in Our region."
      slides={[
        { src: "/public_html/images/nosotros/history/past1.jpg", alt: "img1" },
        { src: "/public_html/images/nosotros/history/past2.jpg", alt: "img2" },
        { src: "/public_html/images/nosotros/history/past3.jpg", alt: "img3" },
        { src: "/public_html/images/nosotros/history/past4.jpg", alt: "img4" },
        { src: "/public_html/images/nosotros/history/past5.jpeg", alt: "img5"},
        { src: "/public_html/images/nosotros/history/past6.jpeg", alt: "img6"},
      ]}
      interval={4000} 
  />
</BaseLayout>