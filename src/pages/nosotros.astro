---
import BaseLayout from '../layouts/BaseLayout.astro';
import LogoCloud from '../components/LogoCloud.astro';
import Card3 from '../components/Card3.astro';
import Card from '../components/Card.astro'
import Card2 from '../components/Card2.astro'
import ImageCarousel from '../components/Carrouselimages';

const features = [
  { text: '32 años de experiencia.' },
  { text: 'Unidades de modelo reciente.' },
  { text: 'Responsables con el medio ambiente.' },
  { text: 'Unidades con rastreo satelital.' },
  { text: 'Unidades limpias y sanitizadas.' },
  { text: 'Implementacion de Web Service con nuestros clientes.' },
  { text: 'Personal de logistica y atencion a clientes 24/7.' },
  { text: 'Certificaciones ISO 9001:2015 C-TPAT, HACCP.' },
]
const items = [
  { text: 'Honestidad: Actuar con propiedad y apego a las normas de la empresa.' },
  { text: 'Responsabilidad: Cumplir con los compromisos y deberes tanto en el trabajo como en la familia, asumiendo las consecuencias de los actos.' },
  { text: 'Respeto: Reconocer la dignidad y los derechos propios y de las demás personas.' },
  { text: 'Servicio: Brindar atención oportuna con eficiencia y amabilidad a los clientes internos y externos.' },
  { text: 'Justicia: Dar a cada quien lo que corresponde.' },
];
---

<BaseLayout>
    <Card 
    client:load
  bgSvg="./images/nosotros/fondoserch.png"
  image = "./images/nosotros/eteserch.png",
  text = "EN TRANSPORTES GARZA LEAL NUESTRA MISION PRINCIPAL ES OFRECER EL MEJOR SERVICIO A NUESTROS CLIENTES EN EL TRASLADO DE SUS PRODUCTOS, CUMPLIENDO CON LOS ESTANDARES LEGALES, REGLAMENTARIOS Y DE CLIENTE, COMPROMETIDOS EN LA MEJORA CONTINUA DE NUESTRO SISTEMA DE GESTIÓN DE CALIDAD.",
  textStyle='text-1'
  imageOrigin = "Right",
  textOrigin = "Left",
/>
	<LogoCloud 
    backgroundImage = './images/svgs/logo1.svg',
  title = 'POLITICA DE CALIDAD',
  titleStyle = 'logo-nosotros'
  origin ="bottom",/>
  <Card3 
    client:load
    bgImage="./images/nosotros/degradadoright.png",
    image="./images/nosotros/seca.jpg",
    imagePosition="left",
    title="MISIÓN",
    text="Brindar a nuestros Clientes un excelente Servicio, confiable y puntual, con Unidades limpias y bien presentadas",
    titleStyle = "title1-card3-nosotros",
    textStyle = "text1-card3-nosotros",
    textAlign = "left",
    textOrigin = "top",
    imageOrigin = "bottom",
    titleOrigin = "bottomRight",
  />
  <Card3 
    client:load
    bgImage="./images/nosotros/degradadoleft.png",
    image="./images/nosotros/valores.png",
    imagePosition="right",
    title="VISIÓN",
    text="Ser una de las Principales Empresas de Autotransporte Federal de carga en Nuestro País, y que esto refleje la Confiabilidad en nuestros Clientes, Equipos perfectamente presentados.",
    titleStyle = "title1-card3-nosotros",
    textStyle = "text1-card3-nosotros",
    textAlign = "left",
    textOrigin = "Right",
    imageOrigin = "bottomLeft",
    titleOrigin = "topRight",
  />
  <Card2
  bgImage = "./images/nosotros/degradadoright.png",
  items = {items},
  image= "./images/thermo.jpg",
  imagePosition = "left",
  listStyle='list-2'
  titleStyle='titlelist-1'
  title='VALORES',
  animateImage = {false},
  animateList = {true},
  imageOrigin = "Left",  />
  <ImageCarousel client:load
      title="Historia"
      description="Transportes Garza Leal es una empresa 100% mexicana, que finca sus orígenes hace 36 años, con la visión y el empuje de los hermanos Garza Leal, quienes decidieron incursionar en el negocio del autotransporte en 1989, para cubrir las necesidades del Transporte de alimentos en Nuestra región."
      slides={[
        { src: "./images/nosotros/history/past1.jpg", alt: "img1" },
        { src: "./images/nosotros/history/past2.jpg", alt: "img2" },
        { src: "./images/nosotros/history/past3.jpg", alt: "img3" },
        {src: "./images/nosotros/history/past4.jpg", alt: "img4"},
      ]}
      interval={4000} 
  />
</BaseLayout>
