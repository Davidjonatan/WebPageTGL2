---
import BaseLayout from '../layouts/BaseLayout.astro';
import LogoCloud from '../components/LogoCloud.astro';
import Feature from '../components/Feature.astro';
import Testimonials from '../components/Testimonials.tsx';
import Cta from '../components/Cta.astro';
import HowItWorks from '../components/HowItWorks';

const features = [
  { text: '32 años de experiencia.' },
  { text: 'Unidades de modelo reciente.' },
  { text: 'Responsables con el medio ambiente.' },
  { text: 'Unidades con rastreo satelital.' },
  { text: 'Unidades limpias y sanitizadas.' },
  { text: 'Implementacion de Web Service con nuestros clientes.' },
  { text: 'Personal de logistica y atencion a clientes 24/7.' },
  { text: 'Certificaciones ISO 9001:2015 C-TPAT, HACCP.' },
]
const tabs = {
  tab1: { text: 'Tanque', image: './images/tanque2.jpg' },
  tab2: { text: 'Caja Thermo', image: './images/thermo.jpg' },
  tab3: { text: 'Caja Seca', image: './images/seca.jpg' },
};
---

<BaseLayout>
	<LogoCloud 
   backgroundImage="./images/wave.svg"
  title="Déjanos moverte con honestidad y grandeza."
  height="h-[60vh]"/>
	<Feature
  imageSrc="./images/tractocamion.jpg" 
  imageAlt="Tracto camión" 
  items={features}
  reverse={false} />
	<Cta
  backgroundColor = "bg-gray-900", // fondo de la section
  cardColor = "bg-[#1D5884]",      // fondo del div principal
  title = "Cobertura",
  text= "Prestamos nuestros servicios a todo lo largo y ancho del territorio nacional, así como productos de exportación hacia los Estados Unidos, contamos con diferentes tipos de licencia para el cruce de mercancía y unidades en los estados unidos",
  buttonText = "Contactanos",
  buttonSubtext = "Now",
  buttonColor = "bg-amber-500 text-white hover:bg-amber-600",
  image = "./images/mapa.jpg",
  />
	  <HowItWorks 
        title="Servicio de transporte confiable" 
        subtitle="Optimización logística inteligente" 
        tabs={tabs} 
        client:load 
      />
	<Testimonials client:load
  testimonials={[
    { quote: "Todas nuestras unidades cuentan con sistema de rastreo satelital el cual es monitoreado las 24 hrs para asegurar que el viaje llegue a su destino sin ningún contratiempo"},
    { quote: "Equipos de telecomunicaciones con cobertura en todo el territorio nacional y extranjero"},
    { quote: "Al ser grado alimenticio todas nuestras unidades pasan por un proceso de lavado y sanitizado antes de salir a cada viaje asegurando la calidad a nuestros clientes"}
  ]}/>
</BaseLayout>
